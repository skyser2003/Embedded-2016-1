<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shjan.embedded.InfoDisplayActivity">

    <TextView
        android:id="@+id/text_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room"
        android:textIsSelectable="false"
        android:textSize="30dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/text_status"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/room1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="27dp"
        android:layout_alignTop="@+id/text_room"
        android:layout_toEndOf="@+id/text_temperature" />

    <CheckBox
        android:id="@+id/room2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/room1"
        android:layout_alignTop="@+id/text_room"
        android:layout_marginLeft="30dp" />

    <CheckBox
        android:id="@+id/room3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/room2"
        android:layout_alignTop="@+id/text_room"
        android:layout_marginLeft="30dp" />

    <CheckBox
        android:id="@+id/room4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/room3"
        android:layout_alignTop="@+id/text_room"
        android:layout_marginLeft="30dp" />

    <CheckBox
        android:id="@+id/room5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/room4"
        android:layout_alignTop="@+id/text_room"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/text_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_room"
        android:layout_marginTop="23dp"
        android:text="Temperature"
        android:textIsSelectable="false"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/text_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_temperature"
        android:layout_marginTop="23dp"
        android:text="Humidity"
        android:textIsSelectable="false"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/text_brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_humidity"
        android:layout_marginTop="23dp"
        android:text="Brightness"
        android:textIsSelectable="false"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 C"
        android:id="@+id/value_temperature"
        android:layout_alignTop="@+id/text_temperature"
        android:layout_alignEnd="@+id/room5"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:id="@+id/value_humidity"
        android:textSize="30dp"
        android:layout_alignTop="@+id/text_humidity"
        android:layout_alignEnd="@+id/value_temperature" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/value_brightness"
        android:textSize="30dp"
        android:layout_alignTop="@+id/text_brightness"
        android:layout_alignEnd="@+id/value_humidity" />

    <TextView
        android:id="@+id/text_manual_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Manual"
        android:textIsSelectable="false"
        android:textSize="30dp"
        android:layout_below="@+id/text_brightness"
        android:layout_alignStart="@+id/text_brightness" />

    <CheckBox
        android:id="@+id/checkbox_manual_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_alignTop="@+id/text_manual_temperature"
        android:layout_alignStart="@+id/room1" />

    <TextView
        android:id="@+id/text_fake_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="GPS"
        android:textIsSelectable="false"
        android:textSize="30dp"
        android:layout_below="@+id/text_manual_temperature"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_gps"
        android:layout_alignTop="@+id/text_fake_gps"
        android:layout_alignEnd="@+id/room5"
        android:layout_alignBottom="@+id/text_fake_gps"
        android:layout_toEndOf="@+id/room2"
        android:layout_alignStart="@+id/room3" />

    <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textIsSelectable="false"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFF"
        android:id="@+id/button_on"
        android:layout_above="@+id/text_room"
        android:layout_alignEnd="@+id/room5"
        android:layout_toEndOf="@+id/room3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:id="@+id/button_off"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/room2"
        android:layout_alignBottom="@+id/button_on"
        android:layout_toStartOf="@+id/button_on" />

    <CheckBox
        android:id="@+id/status_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_alignBottom="@+id/button_off"
        android:layout_alignEnd="@+id/room1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/text_const_temperature"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/checkbox_manual_temperature"
        android:layout_alignStart="@+id/value_brightness" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/value_manual_temperature"
        android:text="0"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/text_manual_temperature"
        android:layout_alignEnd="@+id/room4"
        android:layout_toEndOf="@+id/checkbox_manual_temperature"
        android:textAllCaps="false"
        android:textAlignment="textEnd" />

</RelativeLayout>
