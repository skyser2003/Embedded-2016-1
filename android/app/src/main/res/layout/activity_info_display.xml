<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shjan.embedded.InfoDisplayActivity">

    <TextView
        android:id="@+id/text_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/room1"
        android:text="Room"
        android:textIsSelectable="false"
        android:textSize="30dp" />

    <CheckBox
        android:id="@+id/room1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/text_temperature" />

    <CheckBox
        android:id="@+id/room2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/room1"
        android:layout_marginLeft="30dp" />

    <CheckBox
        android:id="@+id/room3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/room2"
        android:layout_marginLeft="30dp" />

    <CheckBox
        android:id="@+id/room4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/room3"
        android:layout_marginLeft="30dp" />

    <CheckBox
        android:id="@+id/room5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/room4"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/text_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_room"
        android:layout_marginTop="23dp"
        android:text="Temperature"
        android:textIsSelectable="false"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/text_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_temperature"
        android:layout_marginTop="23dp"
        android:text="Humidity"
        android:textIsSelectable="false"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/text_brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_humidity"
        android:layout_marginTop="23dp"
        android:text="Brightness"
        android:textIsSelectable="false"
        android:textSize="30dp" />
</RelativeLayout>
